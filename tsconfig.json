{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": false,
    "declarationMap": false,
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES2016",
    "lib": ["ES2016", "DOM"],
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "."
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dangerfile.ts"]
}
